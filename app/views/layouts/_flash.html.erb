<% if flash[:notice] %>
  <div class="w-full flex justify-center">
    <div class="bg-green-500 text-white p-4 rounded mb-4">
      <%= flash[:notice] %>
    </div>
  </div>
<% end %>

<% if flash[:alert] %>
  <div class="w-full flex justify-center">
    <div class="bg-red-500 text-white p-4 rounded mb-4">
      <%= flash[:alert] %>
    </div>
  </div>
<% end %>
