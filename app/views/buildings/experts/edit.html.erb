<%= turbo_frame_tag "expert_#{@expert.id}" do %>
  <%= form_with(model: [@building, @expert], data: { turbo_frame: :table }, class: 'space-y-4') do |form| %>
    <div class="flex flex-col">
      <%= form.label :name, class: 'text-sm font-medium text-gray-700' %>
      <%= form.text_field :name, class: 'mt-1 p-2 block w-full border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm text-center' %>
    </div>
    <div class="flex space-x-4">
      <%= form.submit 'Save', class: 'flex-1 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer' %>
      <%= link_to 'Cancel', '#turbo', data: { turbo_frame: :table }, class: 'flex-1 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-gray-700 bg-gray-100 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
      <%= link_to 'Delete', building_expert_path(@building, @expert), data: { turbo_method: :delete }, class: 'flex-1 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500' %>
    </div>
  <% end %>
<% end %>
