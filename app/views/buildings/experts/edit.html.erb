<%= turbo_frame_tag "expert_#{@expert.id}" do %>
  <div class="flex flex-wrap justify-between items-center border-b">
    <div class="py-2 px-4 flex-1">
      <%= form_with model: [@building, @expert], local: true, data: { turbo_frame: :experts_list } do |form| %>
        <div class="mb-4">
          <%= form.label :name, class: 'block text-gray-700' %>
          <%= form.text_field :name, class: 'border border-gray-300 rounded p-2 w-full' %>
        </div>
        <div class="flex space-x-4">
          <%= form.submit 'Save', class: 'bg-green-500 text-white rounded px-4 py-2' %>
          <%= link_to 'Cancel', '#turbo', data: { turbo_frame: :experts_list }, class: 'bg-gray-500 text-white rounded px-4 py-2' %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
