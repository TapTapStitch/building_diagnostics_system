<%= turbo_frame_tag :show do %>
  <div class="mx-auto w-full flex flex-col">
    <div class="mx-auto">
      <%= turbo_frame_tag :building_turbo do %>
        <div class="border border-gray-300 rounded-lg mb-4 p-4">
          <%= render @building %>
        </div>
      <% end %>

      <%= link_to 'Edit this building', edit_building_path(@building), data: { turbo_frame: :building_turbo }, class: 'mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium' %>
      <%= link_to 'Back to buildings', buildings_path, data: { turbo_frame: '_top' }, class: 'ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium' %>
      <%= link_to 'Export XML', export_xml_building_path(@building), class: 'ml-2 rounded-lg py-3 px-5 bg-blue-500 inline-block font-medium', data: { turbo: false } %>
      <%= link_to 'Generate random Evaluations', generate_random_building_evaluations_path(@building), class: 'ml-2 rounded-lg py-3 px-5 bg-yellow-500 inline-block font-medium', data: { turbo_method: :post, turbo_confirm: 'Are you sure ?' } %>
      <%= link_to 'Delete this building', @building, class: 'ml-2 rounded-lg py-3 px-5 bg-red-500 inline-block font-medium text-white', data: { turbo_method: :delete, turbo_confirm: 'Are you sure you want to delete this building?', turbo_frame: '_top' } %>
    </div>
    <%= render 'buildings/tables' %>
  </div>
<% end %>
