<%= turbo_frame_tag "evaluation_#{@evaluation.id}" do %>
  <div class="flex flex-wrap justify-between items-center border-b">
    <div class="py-2 px-4 flex-1">
      <%= form_with model: [@building, @evaluation], local: true, data: { turbo_frame: :evaluations_list } do |form| %>
        <div class="mb-4">
          <%= form.label :rating, class: 'block text-gray-700' %>
          <%= form.number_field :rating, step: 0.1, min: 0, max: 1, class: 'border border-gray-300 rounded p-2 w-full' %>
        </div>
        <div class="flex space-x-4">
          <%= form.submit 'Save', class: 'bg-green-500 text-white rounded px-4 py-2' %>
          <%= link_to 'Cancel', '#turbo', data: { turbo_frame: :evaluations_list }, class: 'bg-gray-500 text-white rounded px-4 py-2' %>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
