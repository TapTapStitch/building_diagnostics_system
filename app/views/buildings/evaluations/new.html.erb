<%= turbo_frame_tag "defect_#{params[:defect_id]}_expert_#{params[:expert_id]}" do %>
  <%= form_with(model: Evaluation.new, url: building_evaluations_path(@building), class: 'space-y-4') do |form| %>
    <%= form.hidden_field :defect_id, value: params[:defect_id] %>
    <%= form.hidden_field :expert_id, value: params[:expert_id] %>

    <div class="flex flex-col">
      <%= form.label :rating, class: 'text-sm font-medium text-gray-700' %>
      <%= form.number_field :rating, step: 0.01, min: 0, max: 1, value: 0, required: true, class: 'mt-1 p-2 block w-full border border-gray-300 rounded-md shadow-sm focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm text-center' %>
    </div>

    <div class="flex space-x-4">
      <%= form.submit 'Save', class: 'flex-1 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 cursor-pointer' %>
      <%= link_to 'Cancel', '#', data: { turbo_frame: :table }, class: 'flex-1 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-gray-700 bg-gray-100 hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500' %>
    </div>
  <% end %>
<% end %>
