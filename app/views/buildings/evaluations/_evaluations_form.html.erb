<div class="mt-8">
  <h2 class="text-2xl font-bold mb-4">Add a new evaluation</h2>
  <%= form_with model: Evaluation.new, url: building_evaluations_path(@building), local: true, class: 'mb-8' do |form| %>
    <div class="mb-4">
      <%= form.label :defect_id, 'Defect', class: 'block text-gray-700' %>
      <%= form.collection_select :defect_id, @building.defects, :id, :name, {}, class: 'border border-gray-300 rounded p-2 w-full' %>
    </div>
    <div class="mb-4">
      <%= form.label :expert_id, 'Expert', class: 'block text-gray-700' %>
      <%= form.collection_select :expert_id, @building.experts, :id, :name, {}, class: 'border border-gray-300 rounded p-2 w-full' %>
    </div>
    <div class="mb-4">
      <%= form.label :rating, class: 'block text-gray-700' %>
      <%= form.number_field :rating, step: 0.1, min: 0, max: 1, value: 0, class: 'border border-gray-300 rounded p-2 w-full' %>
    </div>
    <div>
      <%= form.submit 'Add Evaluation', class: 'bg-green-500 text-white rounded px-4 py-2' %>
    </div>
  <% end %>
</div>
