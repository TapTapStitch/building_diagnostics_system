<%= turbo_frame_tag :evaluations_turbo do %>
  <div class="mt-8">
    <h2 class="text-2xl font-bold mb-4">Add a new evaluation</h2>
    <%= form_with model: Evaluation.new, url: building_evaluations_path(@building), local: true, class: 'mb-8' do |form| %>
      <div class="mb-4">
        <%= form.label :defect_id, 'Defect', class: 'block text-gray-700' %>
        <%= form.collection_select :defect_id, @building.defects, :id, :name, {}, class: 'border border-gray-300 rounded p-2 w-full' %>
      </div>
      <div class="mb-4">
        <%= form.label :expert_id, 'Expert', class: 'block text-gray-700' %>
        <%= form.collection_select :expert_id, @building.experts, :id, :name, {}, class: 'border border-gray-300 rounded p-2 w-full' %>
      </div>
      <div class="mb-4">
        <%= form.label :rating, class: 'block text-gray-700' %>
        <%= form.number_field :rating, step: 0.1, min: 0, max: 1, class: 'border border-gray-300 rounded p-2 w-full' %>
      </div>
      <div>
        <%= form.submit 'Add Evaluation', class: 'bg-green-500 text-white rounded px-4 py-2' %>
      </div>
    <% end %>
  </div>

  <% @defects.each do |defect| %>
    <div class="mt-8">
      <h3 class="text-xl font-bold mb-2">Evaluations for <%= defect.name %></h3>

      <% if defect.evaluations.any? %>
        <div class="min-w-full bg-white border border-gray-300 rounded-lg mb-4">
          <div class="flex flex-wrap justify-between items-center border-b">
            <div class="py-2 px-4 flex-1 font-bold">Expert</div>
            <div class="py-2 px-4 font-bold">Actions</div>
          </div>
          <% defect.evaluations.each do |evaluation| %>
            <%= turbo_frame_tag "evaluation_#{evaluation.id}" do %>
              <div class="flex flex-wrap justify-between items-center border-b">
                <div class="py-2 px-4 flex-1"><%= evaluation.expert.name %></div>
                <div class="py-2 px-4">Rating: <%= evaluation.rating %></div>
                <div class="py-2 px-4">
                  <%= link_to 'Edit', edit_building_evaluation_path(@building, evaluation), data: { turbo_frame: "evaluation_#{evaluation.id}" }, class: 'bg-blue-500 text-white rounded px-4 py-2' %>
                  <%= link_to 'Delete', building_evaluation_path(@building, evaluation), data: { turbo_method: :delete }, class: 'bg-red-500 text-white rounded px-4 py-2' %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      <% else %>
        <p class="mb-4 text-gray-500">No evaluations available for this defect.</p>
      <% end %>
    </div>
  <% end %>
<% end %>
