<div class="mx-auto md:w-2/3 w-full flex flex-col">
  <div class="mx-auto">
    <div class="border border-gray-300 rounded-lg mb-4 p-4">
      <%= render @building %>
    </div>

    <%= link_to 'Edit this building', edit_building_path(@building), class: 'mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium' %>
    <%= link_to 'Back to buildings', buildings_path, class: 'ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium' %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this building', @building, method: :delete, class: 'mt-2 rounded-lg py-3 px-5 bg-red-500 text-white font-medium' %>
    </div>
  </div>

  <div class="mt-8">
    <h2 class="text-2xl font-bold mb-4">Defects</h2>
    <table class="min-w-full bg-white border border-gray-300 rounded-lg mb-4">
      <thead>
      <tr>
        <th class="py-2 px-4 border-b">Name</th>
      </tr>
      </thead>
      <tbody>
      <% @defects.each do |defect| %>
        <tr>
          <td class="py-2 px-4 border-b"><%= defect.name %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <h3 class="text-xl font-bold mb-4">Add a new defect</h3>
    <%= form_with model: [@building, @defect], local: true, class: "mb-8" do |form| %>
      <div class="mb-4">
        <%= form.label :name, class: "block text-gray-700" %>
        <%= form.text_field :name, class: "border border-gray-300 rounded p-2 w-full" %>
      </div>
      <div>
        <%= form.submit "Add Defect", class: "bg-green-500 text-white rounded px-4 py-2" %>
      </div>
    <% end %>
  </div>

  <div class="mt-8">
    <h2 class="text-2xl font-bold mb-4">Experts</h2>
    <table class="min-w-full bg-white border border-gray-300 rounded-lg mb-4">
      <thead>
      <tr>
        <th class="py-2 px-4 border-b">Name</th>
      </tr>
      </thead>
      <tbody>
      <% @experts.each do |expert| %>
        <tr>
          <td class="py-2 px-4 border-b"><%= expert.name %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <h3 class="text-xl font-bold mb-4">Add a new expert</h3>
    <%= form_with model: [@building, @expert], local: true, class: "mb-8" do |form| %>
      <div class="mb-4">
        <%= form.label :name, class: "block text-gray-700" %>
        <%= form.text_field :name, class: "border border-gray-300 rounded p-2 w-full" %>
      </div>
      <div>
        <%= form.submit "Add Expert", class: "bg-green-500 text-white rounded px-4 py-2" %>
      </div>
    <% end %>
  </div>
</div>
