<div class="mx-auto md:w-2/3 w-full flex flex-col">
  <div class="mx-auto">
    <div class="border border-gray-300 rounded-lg mb-4 p-4">
      <%= render @building %>
    </div>

    <%= link_to 'Edit this building', edit_building_path(@building), class: 'mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium' %>
    <%= link_to 'Back to buildings', buildings_path, class: 'ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium' %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this building', @building, method: :delete, class: 'mt-2 rounded-lg py-3 px-5 bg-red-500 text-white font-medium' %>
    </div>
  </div>

  <%= render 'buildings/defects' %>

  <%= render 'buildings/experts' %>

  <div class="mt-8">
    <h2 class="text-2xl font-bold mb-4">Evaluations</h2>
    <% @defects.each do |defect| %>
      <h3 class="text-xl font-bold mb-2">Evaluations for <%= defect.name %></h3>
      <table class="min-w-full bg-white border border-gray-300 rounded-lg mb-4">
        <thead>
        <tr>
          <th class="py-2 px-4 border-b">Expert</th>
          <th class="py-2 px-4 border-b">Rating</th>
        </tr>
        </thead>
        <tbody>
        <% defect.evaluations.each do |evaluation| %>
          <tr>
            <td class="py-2 px-4 border-b"><%= evaluation.expert.name %></td>
            <td class="py-2 px-4 border-b"><%= evaluation.rating %></td>
          </tr>
        <% end %>
        </tbody>
      </table>

      <h4 class="text-lg font-bold mb-4">Add a new evaluation for <%= defect.name %></h4>
      <%= form_with model: Evaluation.new, url: building_defect_evaluations_path(@building, defect), local: true, class: 'mb-8' do |form| %>
        <div class="mb-4">
          <%= form.label :expert_id, class: 'block text-gray-700' %>
          <%= form.collection_select :expert_id, @building.experts, :id, :name, {}, class: 'border border-gray-300 rounded p-2 w-full' %>
        </div>
        <div class="mb-4">
          <%= form.label :rating, class: 'block text-gray-700' %>
          <%= form.number_field :rating, step: 0.1, min: 0, max: 1, class: 'border border-gray-300 rounded p-2 w-full' %>
        </div>
        <div>
          <%= form.submit 'Add Evaluation', class: 'bg-green-500 text-white rounded px-4 py-2' %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
